<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.skillconnect.User_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.dev.skillconnect.Login">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/textInputLayout"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/username_editext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="77dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="22dp"
                    android:backgroundTint="@color/widgetcolors"
                    android:hint="Username"
                    android:layout_marginBottom="10dp"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/pwd_editext"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/username_editext"
                    android:layout_alignStart="@+id/username_editext"
                    android:layout_below="@+id/username_editext"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/widgetcolors"
                    android:hint="Password"
                    android:textStyle="bold">

                </EditText>

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/pwd_editext"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/pwd_editext"
                    android:layout_gravity="right"
                    android:text="Forgot Password"
                    android:layout_below="@id/pwd_editext"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/text_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:backgroundTint="@color/widgetcolors"
                android:text="Login"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/button"
                android:id="@+id/linearLayout"
                android:gravity="center"
                android:layout_margin="10dp"
                >

                <View
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:id="@+id/LeftLine"
                    android:layout_marginRight="10dp"
                    android:background="@color/widgetcolors">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forgotpass"
                    android:text=" OR CONNECT WITH "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <View
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:id="@+id/RightLine"
                    android:background="@color/widgetcolors">
                </View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_layouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <br.com.bloder.magic.view.MagicButton
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:button_icon="@drawable/fb"
                    app:button_icon_height="30dp"
                    app:button_icon_width="80dp"
                    app:icon_button_color="#3b5999"
                    app:magic_button_size="100dp" />

                <br.com.bloder.magic.view.MagicButton
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    app:button_icon="@drawable/google"
                    app:button_icon_height="30dp"
                    app:button_icon_width="75dp"
                    app:icon_button_color="#ffffff"
                    app:magic_button_size="100dp" />

                <br.com.bloder.magic.view.MagicButton
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:button_icon="@drawable/linkedin"
                    app:button_icon_height="30dp"
                    app:button_icon_width="75dp"
                    app:icon_button_color="#ffffff"
                    app:magic_button_size="100dp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</FrameLayout>
